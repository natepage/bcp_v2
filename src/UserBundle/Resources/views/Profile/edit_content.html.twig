{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" method="POST" class="fos_user_profile_edit form-horizontal">
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.current_password) }}
    {{ form_row(form.licence) }}
    {{ form_row(form.newsletter, {'attr': {'style': 'display: block;'}}) }}
    {{ form_rest(form) }}

    <hr>

    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
</form>
