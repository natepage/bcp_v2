{% trans_default_domain 'FOSUserBundle' %}

{% if form_errors(form) %}
    <div class="alert alert-danger">{{ form_errors(form) }}</div>
{% endif %}

<form action="" method="POST" class="fos_user_registration_register form-horizontal">
    {{ form_row(form.email) }}
    {{ form_row(form.username) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}
    {{ form_row(form.newsletter, {'attr': {'style': 'display: block;'}}) }}
    {{ form_rest(form) }}

    <hr>

    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}"/>
    </div>
</form>
