{% extends "::fos_user_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_title %}Connexion{% endblock fos_user_title %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger">{{ error|trans }}</div>
{% endif %}

<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" />

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" class="form-control" required="required" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <hr>

    <div class="text-center">
        <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="{{ 'security.login.submit'|trans }}" />

        <p class="bcp-mt"><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a></p>
    </div>
</form>
{% endblock fos_user_content %}
