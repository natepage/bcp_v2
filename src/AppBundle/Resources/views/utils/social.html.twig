{% set google = 'https://plus.google.com/share?url=' ~ shareUrl %}
{% set mail = 'mailto:?subject=' ~ title ~ '&body=' ~ shareUrl %}

<div class="social-ctn">
    <div class="container text-center">
        <h2 class="social-title">Vous avez aim√© ce contenu ? Partagez le !</h2>
