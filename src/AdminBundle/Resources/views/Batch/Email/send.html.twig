{% extends '@App/utils/email_structure.html.twig' %}

{% block email_body %}
    <h3 style="font-size: 16px; font-weight: 600; line-height: 2; text-align: center; text-transform: uppercase; color: rgba(255, 76, 64, 0.98);">
        {{ send_subject }}
    </h3>

    <div style="display:block;
        font-size:2px;
        line-height:2px;
        margin: auto;
        width:40px;
        background-color:#c2c2c2;">&nbsp;</div>

    {{ send_body|raw }}
{% endblock email_body %}