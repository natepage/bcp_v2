<script type="text/javascript">
    $('.admin-group-description-toggle').each(function(){
        var target = $(this).attr('target');

        if(target){
            target = $(target);

            $(this).click(function(){
                if(target.is(':visible')){
                    target.hide();
                } else {
                    target.show();
                }
            });
        } else {
            $(this).hide();
        }
    });
</script>